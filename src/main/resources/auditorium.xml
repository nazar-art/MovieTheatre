<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-3.2.xsd
 		http://www.springframework.org/schema/context
 		http://www.springframework.org/schema/context/spring-context.xsd">


    <bean id="auditorium1" class="net.lelyak.edu.entity.Auditorium">
        <property name="name" value="${auditorium1.name}"/>
        <property name="numberOfSeats" value="${auditorium1.number-of-seats}"/>
        <property name="vipSeats">
            <bean class="org.springframework.util.StringUtils" factory-method="commaDelimitedListToSet">
                <constructor-arg type="java.lang.String" value="${auditorium1.vip-seats}"/>
            </bean>
        </property>
    </bean>

    <bean id="auditorium2" class="net.lelyak.edu.entity.Auditorium">
        <property name="name" value="${auditorium2.name}"/>
        <property name="numberOfSeats" value="${auditorium2.number-of-seats}"/>
        <property name="vipSeats">
            <bean class="org.springframework.util.StringUtils" factory-method="commaDelimitedListToSet">
                <constructor-arg type="java.lang.String" value="${auditorium2.vip-seats}"/>
            </bean>
        </property>
    </bean>

    <bean id="auditorium3" class="net.lelyak.edu.entity.Auditorium">
        <property name="name" value="${auditorium3.name}"/>
        <property name="numberOfSeats" value="${auditorium3.number-of-seats}"/>
        <property name="vipSeats">
            <bean class="org.springframework.util.StringUtils" factory-method="commaDelimitedListToSet">
                <constructor-arg type="java.lang.String" value="${auditorium3.vip-seats}"/>
            </bean>
        </property>
    </bean>

    <util:list id="auditoriumsList">
        <ref bean="auditorium1"/>
        <ref bean="auditorium2"/>
        <ref bean="auditorium3"/>
    </util:list>

</beans>